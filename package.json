{
  "name": "things",
  "version": "0.1.0",
  "description": "A GTD Tool",
  "engines": {
    "node": ">=7"
  },
  "author": "songjia.happycoding@gmail.com",
  "scripts": {
    "client-dev-server": "better-npm-run client-dev-server",
    "dev-server": "node --harmony-async-await server/server.js",
    "build": "node build/build.js",
    "test": "npm run test:client && npm run test:server",
    "test:client": "better-npm-run test:client",
    "test:client-watch": "npm run test:client -- --watch",
    "test:server": "better-npm-run test:server",
    "codecov": "codecov"
  },
  "betterScripts": {
    "client-dev-server": {
      "command": "node client-react/bin/dev-server.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "test:client": {
      "command": "node ./node_modules/karma/bin/karma start client-react/config/karma.config",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    },
    "test:server": {
      "command": "nyc mocha --harmony-async-await  server/tests/**/*.spec.js && nyc report -r lcov --report-dir coverage/server",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },

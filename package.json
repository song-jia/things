    "sass-loader": "^4.1.1",
    "shelljs": "^0.7.5",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.4.6",
    "style-loader": "^0.13.1",
    "supertest": "^2.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.2"
  },
  "nyc": {
    "include": [
      "server/**"
    ],
    "exclude": [
      "server/tests/**",
      "server/config.js"
    ],
    "report-dir": "./server/tests/coverage",
    "all": true,
    "cache": false
  }
}

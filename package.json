{
  "name": "things",
  "version": "0.1.0",
  "description": "A GTD Tool",
  "engines": {
    "node": ">=7"
  },
  "author": "songjia.happycoding@gmail.com",
  "scripts": {
    "client-dev-server": "cross-env DEBUG=app:* node client-react/bin/dev-server.js",
    "dev-server": "node --harmony-async-await server/server.js",
    "build": "node build/build.js",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cross-env NODE_ENV=test DEBUG=app:* karma start client-react/config/karma.config",
    "test:server": "cross-env NODE_ENV=test nyc mocha --harmony-async-await server/tests/**/*.spec.js",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coverage:server": "nyc report --reporter=lcov"
  },
  "dependencies": {
    "antd": "^2.5.3",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.4.7",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-jwt": "^1.2.0",
    "koa-router": "^7.0.1",
    "monk": "^3.0.4",
    "normalize.css": "^5.0.0",
    "query-string": "^4.2.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "validator": "^6.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-import": "^1.1.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-runtime": "^6.0.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "codecov": "^1.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "cssnano": "^3.9.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-html": "^1.3.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "fs-extra": "^1.0.0",
    "html-webpack-plugin": "^2.24.1",
    "imports-loader": "^0.7.0",
    "ip": "^1.1.4",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-webpack-with-fast-source-maps": "^1.10.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.1.1",
    "nyc": "^10.0.0",
    "phantomjs-prebuilt": "^2.1.14",
